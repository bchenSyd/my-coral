{
  "name": "coral",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "^1.3.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start":"npm-run-all -p watch-css start-js start-server",
    "start-server": "nodemon server/index.js",
    "start-js": "react-scripts start",
    "watch-css": "npm run build-css && node-sass-chokidar src/styles -o src/styles --watch --recursive",
    "build":"npm-run-all build-css build-js",
    "build-js": "GENERATE_SOURCEMAP=false react-scripts build",
    "build-css": "node-sass-chokidar src/styles  -o src/styles",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "start-heroku": "node server/index.js",
    "heroku-prebuild":  "npm run build",
    "heroku-postbuild": "echo ************ this is run after build *******"
  },
  "devDependencies": {
    "express": "^4.16.3",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.27.1",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "whatwg-fetch": "^2.0.4"
  },
  "proxy": "http://localhost:8082"
}
